## File: /usr/local/etc/kirbyrc
## Variables for kirby* shell scripts by Uwe Gehring <uwe@imap.cc>
##
## Do not change this file! Put your changes in $HOME/.kirbyrc
##
## Variables can be overridden by settings in $HOME/.kirbyrc which will be
## loaded after this file if it exists.
KIRBYTOOLSVERSION="1.0"


# The default kit to be downloaded/installed
KIRBYDEFAULTKIT="starterkit"
# The default version to be downloaded/installed (will be replaced by most recent version number)
KIRBYDEFAULTVERSION="current"

# Prefix to be used for other directories and filenames
KIRBYPREFIX="kirby"
# Directory to which the package should be downloaded
KIRBYDOWNLOADDIR="/usr/local/src/$KIRBYPREFIX"
# Directory where only the /kirby folder will be placed for use in vhost-symlinks
KIRBYLIBDIR="/srv/www/$KIRBYPREFIX-lib"
# Temporary directory where files will be unpacked
KIRBYTEMPDIR="/tmp/$KIRBYPREFIX"

# The Github URL where we can find kirby packages to download
KIRBYGITURL="https://github.com/getkirby"
# The Github API URL where we can find information about releases (tags)
KIRBYGITAPIURL="https://api.github.com/repos/getkirby"

# The root directory of all virtual hosts (should be owned by running user)
KIRBYVHOSTROOT="/srv/www/vhosts"
# The vhost subdirectory where the document root will be
KIRBYHTDOCSDIR="htdocs"
# The vhost subdirectory where logfiles can be placed (if not /var/log/apache2)
KIRBYLOGDIR="logs"
# The root directory of user specific apache2 configuration files (this directory must exist)
KIRBYAPACHECONFDIR="$HOME/.apache2"
# The directory where templates for configuration will be find
KIRBYTEMPLATEDIR="$KIRBYAPACHECONFDIR/templates"

# An array of configuration templates to be used (extension .template is appended)
declare -a _KIRBYTEMPLATES=("vhost-Remote" "vhost-Redirection" "vhost-SSL")
# An associative array of kits and their abbreviation
declare -A _KIRBYKITS=( ["p"]="plainkit" ["s"]="starterkit" )
# An associative array of versions and their abbreviation
declare -A _KIRBYVERSIONS=( ["c"]="current" ["o"]="other" )
# Associative arrays which will be filled with tag names by function getKirbyTags (see below)
declare -A _KIRBYTAGCURRENT
declare -A _KIRBYTAGRECENT
declare -A _KIRBYTAGSOTHERS

# Variables used to create a RFC2822 date to be used in HTTP If-Modified-Since header
declare -A MONTHNAME=( ["01"]="Jan" ["02"]="Feb" ["03"]="Mar" ["04"]="Apr" ["05"]="May" ["06"]="Jun" ["07"]="Jul" ["08"]="Aug" ["09"]="Sep" ["10"]="Oct" ["11"]="Nov" ["12"]="Dec" )
declare -A DAYNAME=( ["1"]="Mon" ["2"]="Tue" ["3"]="Wed" ["4"]="Thu" ["5"]="Fri" ["6"]="Sat" ["7"]="Sun" )


## Add colored output if tput program is installed
if [ ! -z $(which tput) ];then
  txtbld=$(tput -Txterm-256color bold)
  txtrst=$(tput -Txterm-256color sgr0)
  txtred=${txtbld}$(tput -Txterm-256color setaf 1)
  txtgreen=${txtbld}$(tput -Txterm-256color setaf 2)
  txtblue=${txtbld}$(tput -Txterm-256color setaf 4)
fi

## Source user kirbyrc file if it exists
[[ -f $HOME/.kirbyrc ]] && . $HOME/.kirbyrc

# Variables which will likely be changed in $HOME/.kirbyrc
# These values are only examples:
#
#KIRBYADMINUSERMAIL="uwe@imap.cc"
#KIRBYADMINUSERNAME="Uwe Gehring"
#KIRBYADMINUSERLANG="de"
#KIRBYADMINUSERPASS="secretpassword"
#KIRBYCREATEUSERSCRIPT="$HOME/bin/createUser.php"

exit 0
## code: language=bash